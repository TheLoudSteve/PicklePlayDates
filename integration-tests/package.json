    "@types/uuid": "^9.0.8",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.0"
  }
}