# Pickle Play Dates Web App Environment Variables
# Copy this file to .env.local and fill in your values

# API Configuration
NEXT_PUBLIC_API_URL=https://your-api-gateway-url.execute-api.region.amazonaws.com/dev

# Cognito Configuration  
NEXT_PUBLIC_USER_POOL_ID=your-user-pool-id
NEXT_PUBLIC_USER_POOL_CLIENT_ID=your-user-pool-client-id
NEXT_PUBLIC_USER_POOL_DOMAIN=your-cognito-domain

# AWS Region
NEXT_PUBLIC_AWS_REGION=us-west-2

# Environment
NEXT_PUBLIC_ENVIRONMENT=development

# Feature Flags
NEXT_PUBLIC_ENABLE_GOOGLE_SIGNIN=false
NEXT_PUBLIC_ENABLE_APPLE_SIGNIN=false

# Optional: Analytics
# NEXT_PUBLIC_GA_ID=your-google-analytics-id

# Optional: Maps
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Optional: Error Tracking
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn